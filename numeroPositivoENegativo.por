programa {
  funcao inicio() {
    //Exercício do livro Lógica de Programção com Portugol_ex20
       inteiro numero

       escreva("Digite um número inteiro: ")
       leia (numero)

       se (numero >=0 ) {
        escreva ("Número inteiro positivo.")
       } senao {
        escreva ("Número inteiro negativo.")
       }

  } // fim do código.
}
